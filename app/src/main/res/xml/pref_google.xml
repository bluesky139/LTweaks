<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_category_google">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_google_remove_bottom_bar"
            android:title="@string/pref_google_remove_bottom_bar"
            android:summary="@string/pref_google_remove_bottom_bar_summary" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_google_plus">
        <SwitchPreference
            android:defaultValue="false"
