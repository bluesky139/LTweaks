            android:title="@string/pref_google_play_view_in_coolapk"
            android:summary="@string/pref_google_play_view_in_coolapk_summary" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_google_messenger">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_google_messenger_disable_direct_share"
            android:title="@string/pref_google_messenger_disable_direct_share"
            android:summary="@string/pref_google_messenger_disable_direct_share_summary" />
